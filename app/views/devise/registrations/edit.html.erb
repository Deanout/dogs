<div class="col-lg-6 col-lg-offset-3">
<div class="container-fluid">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Edit <%= resource_name.to_s.humanize %></h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
      </div>
      <div class="panel-body">
        <div class="form-inputs">
          <%= f.input :name, required: true, autofocus: true %>
          <%= f.input :email, required: true %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <div class="form-group">
            <%= f.input :current_password, :label => "Current Password", hint: "we need your current password to confirm your changes", required: true %>
          </div>
          <div class="form-group">
            <%= f.input :password, :label => "Change Password [Optional]" , autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false %>
          </div>
          <div class="form-group">
            <%= f.input :password_confirmation, :label => "Confirm New Password" ,required: false %>
          </div>
        </div>
        <div class="form-actions">
          <%= f.button :submit, "Update", class: "btn btn-primary" %>
          <%= button_to "Back", :back, class: "btn btn-primary"%>
          <br>
          <p></p>
        </div>
        <% end %>
      </div>
      <div class="panel-footer">
        <h3>Cancel my account</h3>
        <p>If you wish to delete your account, <%= link_to "Click Here", registration_path(resource_name), data: { confirm: "Are you sure? There's no undoing this. Your account will be gone forever." }, method: :delete %></p>
      </div>
    </div>
  </div>
  </div>
</div>